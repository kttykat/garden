---
import Button from "../components/Button.astro";
import BaseLayout from "./BaseLayout.astro";

const { frontmatter, url } = Astro.props;
const { name, description, date } = frontmatter;
---


<script>
  const ele = document.getElementById("heading");
  if (ele) {
    ele.onclick = () => {
      window.location.href = `/`;
    };
  }
</script>

<BaseLayout name={name}>
  <div class="flex flex-col gap-1 mb-6">
    <h1 class="mb-[-4px] cursor-pointer w-fit" id="heading">{name}</h1>
    <p class="mb-[-6px] italic opacity-80">{date}</p>
    <p>{description}</p>
  </div>
  <div class="main">
    <slot />
  </div>
  <div class="mt-5">
    <Button
      href={`https://github.com/kttykat/garden/main/blog/src/pages/${url}.mdx`}
      >Edit on Github!
    </Button>
  </div>
</BaseLayout>
